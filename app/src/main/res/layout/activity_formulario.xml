<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonditoformulario"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="912dp"
        android:layout_height="236dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032">

        <EditText
            android:id="@+id/edtRut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el RUT"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edtNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese tu nombre"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edtDir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dejanos tu comentario"
            android:minHeight="48dp" />

        <Spinner
            android:id="@+id/spSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Selecciona una comuna"
            android:minHeight="48dp" />
    </LinearLayout>


    <Button
        android:layout_width="113dp"
        android:layout_height="52dp"
        android:layout_marginTop="276dp"
        android:backgroundTint="#496147"
        android:onClick="onClickAgregar"
        android:text="AGREGAR"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="113dp"
        android:layout_height="52dp"
        android:layout_marginTop="276dp"
        android:backgroundTint="#496147"
        android:onClick="onClickEliminar"
        android:text="ELIMINAR"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="125dp"
        android:layout_height="49dp"
        android:layout_marginTop="276dp"
        android:backgroundTint="#496147"
        android:onClick="onClickModificar"
        android:text="MODIFICAR"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lstLista"
        android:layout_width="803dp"
        android:layout_height="932dp"
        android:layout_marginTop="344dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="dejanos tu opinion"
        android:textColor="#000"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="-68dp"
        tools:layout_editor_absoluteY="8dp" />


</android.support.constraint.ConstraintLayout>